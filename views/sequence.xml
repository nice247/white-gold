<odoo>
    <data>
        <record id="sale_seq" model="ir.sequence">
            <field name="name">Sale Sequence</field>
            <field name="code">sale_seq</field>
            <field name="prefix">S</field>
            <field name="padding">4</field>
        </record>

        <record id="invoice_seq" model="ir.sequence">
            <field name="name">Invoice Sequence</field>
            <field name="code">historical.sales.invoice</field>
            <field name="prefix">INV</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>