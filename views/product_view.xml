<odoo>
    <record id="product_tree" model="ir.ui.view">
        <field name="name">product tree</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_code"/>
                <field name="name"/>
                <field name="production_date"/>
                <field name="expiration_date"/>
                <field name="product_price"/>
                <field name="unit"/>
            </tree>
        </field>
    </record>

    <record id="product_form" model="ir.ui.view">
        <field name="name">product form</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Item Code"/>
                        <h1>
                            <field name="inventory_id"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="product_price"/>
                        <field name="unit"/>
                    </group>
                    <group>
                        <field name="production_date"/>
                        <field name="expiration_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_search" model="ir.ui.view">
        <field name="name">product search</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.custom</field>
    </record>
    <menuitem
            id="product_menu_item"
            name="Products"
            parent="milk_product_menu"
            action="product_action"
    />

</odoo>