<odoo>
    <record id="product_tree" model="ir.ui.view">
        <field name="name">product tree</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <tree decoration-danger="(is_expired)">
                <field name="product_code"/>
                <field name="name"/>
                <field name="production_date"/>
                <field name="expiration_date"/>
                <field name="product_price"/>
                <field name="unit"/>
                <field name="is_expired" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="product_form" model="ir.ui.view">
        <field name="name">product form</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <label for="name" string="Item Code"/>
                            <h1>
                                <field name="inventory_id"/>
                            </h1>
                        </div>
                        <group>
                            <field name="production_date"/>
                            <field name="expiration_date"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="product_price"/>
                            <field name="unit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_search" model="ir.ui.view">
        <field name="name">product search</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <search>
                <filter name="is_expired" string="Expired Products" domain="[('is_expired', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="expired_date" model="ir.cron">
        <field name="name">Expiration Date</field>
        <field name="model_id" ref="model_product_custom"/>
        <field name="state">code</field>
        <field name="code">model._check_expire_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.custom</field>
    </record>
</odoo>